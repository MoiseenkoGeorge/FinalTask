@model Mvc.Models.ProfileViewModel

<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">


    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Profile</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src = @Model.ImageUrl class="img-circle img-responsive"> </div>

                <div class="col-md-9 col-lg-9">
                    <table class="table table-user-information">
                        <tbody>
                        <tr>
                            <td>First Name:</td>
                            <td>@Html.DisplayText(@Model.FirstName ?? "not indicated")</td>
                        </tr>
                        <tr>
                            <td>Last Name:</td>
                            <td>@Html.DisplayText(@Model.LastName ?? "not indicated")</td>
                        </tr>
                        <tr>
                            <td>Description:</td>
                            <td>@Html.DisplayText(@Model.Description ?? "not indicated")</td>
                        </tr>
                            <tr>
                                <td>Date of Birth:</td>
                                <<td>@Html.DisplayText(@Model.Birthday.HasValue ? @Model.Birthday.Value.ToString() : "")</td>
                            </tr>
                        <tr>
                            <td>Department:</td>
                            <td>User</td>
                        </tr>

                        <tr>
                            <tr>
                                <td>Email</td>
                                <td><a href="mailto:info@support.com">info@support.com</a></td>
                            </tr>
                        </tr>

                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
</div>
@model Mvc.Models.UserViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>User delete</h2>
<div>Are you sure you want to delete user with login <b>@Html.DisplayFor(model => model.Email)</b>?</div>
@using (var f = Html.Bootstrap().Begin(new Form("Delete", "User").FormMethod(FormMethod.Post).Type(FormType.Horizontal)))
{
    @Html.AntiForgeryToken()
    @f.FormGroup().DisplayTextFor(m => m.Email);
    @f.FormGroup().CustomControls(Html.Bootstrap().SubmitButton().Text("Delete").Class("btn-danger"))
}
